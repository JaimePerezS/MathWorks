<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/txtViewNombreClase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:paddingStart="10dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:id="@+id/btnVerAlumnos"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtViewNombreClase"
        android:layout_below="@+id/txtViewNombreClase"
        android:layout_marginTop="35dp"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/ic_student_black_24dp"
        android:drawableTint="@color/colorAccent"
        android:text="@string/btn_ver_alumnos" />

    <Button
        android:id="@+id/btnEditarClase"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnVerAlumnos"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/ic_edit_black_24dp"
        android:drawableTint="@android:color/holo_orange_dark"
        android:text="@string/btn_editar_clase"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/btnEliminarClase"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnEditarClase"
        android:layout_alignBottom="@+id/btnEditarClase"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnEditarClase"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/ic_delete_black_24dp"
        android:drawableTint="@android:color/holo_red_dark"
        android:text="@string/btn_eliminar_clase"
        android:textColor="@android:color/holo_red_dark" />

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/btnVerAlumnos"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>