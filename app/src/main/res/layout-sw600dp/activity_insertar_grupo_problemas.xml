<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacher.problemsgroup.insert.InsertProblemsGroupActivity">

    <LinearLayout
        android:id="@+id/formInsertarGrupoProblemas"
        android:layout_width="@dimen/form_600_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtInsertarGrupoProblemas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/txtview_crear_grupo_problemas"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/InputNombreGrupoProblemas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <EditText
                android:id="@+id/edTxtNombreGrupoProblemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edtxt_hint_insertar_grupo_problemas" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtViewNivelGrupoProblemas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtview_dificultad" />

        <Spinner
            android:id="@+id/spNivelGrupoProblemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnInsertarGrupoProblemas"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/txtview_crear_grupo_problemas" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
